<Window x:Class="PassManager.AddPosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddPosition" Height="600" Width="400">
    <Grid>
        <ListBox 
            x:Name="listBoxPosition" 
            Margin="140,30,140,0"
            VerticalAlignment="Top"
            MaxHeight="400" SelectionChanged="listBoxPosition_SelectionChanged"
        />
        <TextBox x:Name="textBox" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,100" FontSize="16" Width="200"/>
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,35" Click="button_Click" FontSize="18" Width="120"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5" Padding="0,0,0,0" Width="60" Height="25" Click="buttonCancel_Click"/>
        <Button x:Name="button1" Content="Удалить" HorizontalAlignment="Right" Margin="0,0,5,100" VerticalAlignment="Bottom" Padding="0,0,0,0" Width="65" Height="25" Click="button1_Click"/>

    </Grid>
</Window>
